<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<h1><%= t("additional_order_detail_descriptors") %></h1>

<div id="new_additional_order_detail_descriptor"></div>

<table class="index sortable" id='listing_additional_order_detail_descriptors'>
  <tr>
    <th><%= t("step_name") %></th>
    <th><%= t("model_name") %></th>
    <th><%= t("describable") %></th>
    <th></th>
  </tr>
  <% @additional_order_detail_descriptors.each do |additional_order_detail_descriptor| %>
    <tr id="<%= dom_id additional_order_detail_descriptor %>">
      <td><span class="handle"></span> <%= additional_order_detail_descriptor.step_name %></td>
      <td class='presentation'><%= additional_order_detail_descriptor.model_name %></td>
      <td class='description'><%= additional_order_detail_descriptor.describable.try(:name) %></td>
      <td class="actions">
        <%= link_to_delete(additional_order_detail_descriptor) %>
      </td>
    </tr>
  <% end %>
</table>
