<%= render :layout => 'form' do |item_form| %>  

<h3>Vehicle Detail</h3>

<%= item_form.fields_for :additional_order_details, item_form.object.additional_order_details.detect { |aod| aod.detailed_type == 'Spree::AdditionalOrderDetailModel::VehicleDetail'} do |detail_form| %>
  <%= detail_form.fields_for :detailed do |f| %>
    <div class="field">
      <%= f.label :year %><br />
      <%= f.text_field :year %>
    </div>
    <div class="field">
      <%= f.label :make %><br />
      <%= f.text_field :make %>
    </div>

  <% end %>
<% end %>
<% end %>

